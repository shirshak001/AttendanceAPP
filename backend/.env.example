# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/attendance-app
DB_NAME=attendance_app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Expo Push Notification Configuration
EXPO_ACCESS_TOKEN=your-expo-access-token-here

# Server Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:19000

# Notification Settings
NOTIFICATION_BATCH_SIZE=100
CRON_SCHEDULE=*/5 * * * *

# Security Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info